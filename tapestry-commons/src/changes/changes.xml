<document xmlns="http://maven.apache.org/changes/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/plugins/maven-changes-plugin/xsd/changes-1.0.0.xsd">
    <properties>
        <title>ioko Tapestry Commons</title>
        <author email="ben@gidley.co.uk">Ben Gidley</author>
    </properties>
    <body>
        <release version="1.11" date="2011-06-01" description="Version 1.11">
            <action dev="Ben Gidley" type="fix">
                Made compatible with Tapestry 5.2.x.
                Key changes include removing ALL references to org.apache.tapestry5.RenderSupport and replacing with org.apache.tapestry5.services.javascript.JavaScriptSupport
                You will have to make similar changes to your code if using Caching.
            </>
        </release>

        <release version="1.7" date="2010-01-14" description="Version 1.7">
            <action dev="Ben Gidley" type="add" issue="6">
                Added service to allow you to pass in a response and recieved headers. This is useful for
                TextStreamResponses
            </action>

        </release>

        <release version="1.6" date="2009-12-15" description="Version 1.6">
            <action dev="Allan Boyd" type="add" issue="IOKOCOMMONS-16">
                Added tapestry-properties to provide Tapestry properties related function.
            </action>
            <action dev="Ben Gidley" type="fix" issue="IOKOCOMMONS-13">Fixed auto loading of modules</action>
        </release>

        <release version="1.4" date="2009-08-05" description="Version 1.4">
            <action dev="Ben Gidley" type="fix" issue="IOKOCOMMONS-14">Resolved commons-logging missing/extra dependency
                issue
            </action>
            <action dev="Ben Gidley" type="fix" issue="IOKOCOMMONS-13">Fixed auto loading of modules</action>
        </release>

        <release version="1.3" date="2009-07-14" description="Version 1.3">
            <action dev="Ben Gidley" type="add" issue="IOKOCOMMONS-6">
                Added tapestry-javascript project to provide easy addition of javascript frameworks. Include JQuery
                reference library.
            </action>
            <action dev="Alfie Kirkpatrick" type="add" issue="IOKOCOMMONS-10">
                Added tapestry-mixins project to provide bound checkbox, overlays and grids that don't sort.
            </action>
        </release>

        <release version="1.2" date="2009-06-25" description="Subsequent release">
            <action dev="Ben Gidley" type="fix">
                Fixed bug in cache handling when render support is used
            </action>
            <action dev="Ben Gidley" type="update">
                Increased test coverage to 100% and added clover to monitor.
            </action>
            <action dev="Ben Gidley" type="update">
                Documented how to use SwfObject with JSON events in tapestry pages
            </action>
        </release>

        <release version="1.1" date="2009-06-22" description="First release">
            <action dev="Ben Gidley" type="add">
                Initial release
            </action>
        </release>
    </body>
</document>